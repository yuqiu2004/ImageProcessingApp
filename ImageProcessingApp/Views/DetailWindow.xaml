<Window x:Class="ImageProcessingApp.Views.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessingApp.Views"
        mc:Ignorable="d"
        Title="DetailWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="处理前与处理后的图片对比" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <!-- 处理前图像 -->
            <Image x:Name="BeforeImage" Width="250" Height="250" Margin="10"/>
            <!-- 处理后图像 -->
            <Image x:Name="AfterImage" Width="250" Height="250" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
