<Window x:Class="ImageProcessingApp.Views.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DetailWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="处理前与处理后的图片同比例缩放预览" HorizontalAlignment="Center" Margin="10" FontSize="16" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <!--<Image x:Name="BeforeImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Image x:Name="AfterImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0"/>-->
            <!-- 处理前图像 -->
            <Image x:Name="BeforeImage" Width="350" Height="350" Margin="10"/>
            <!-- 处理后图像 -->
            <Image x:Name="AfterImage" Width="350" Height="350" Margin="10"/>

        </StackPanel>
    </Grid>
</Window>
